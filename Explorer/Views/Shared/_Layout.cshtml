<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Проводник</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
@using System.IO
<body style="background-color: #f5f5f5">
<header>
    <div class="container menu">
        @Html.ActionLink("Создать Папку", "Tree", "TreeModel")
        @Html.ActionLink("Удалить Папку", "Index", "TreeModel")
        @Html.ActionLink("Загрузить файл", "Index", "TreeModel")
        @Html.ActionLink("Скачать файл", "Index", "TreeModel")
        @Html.ActionLink("Удалить Файл", "Index", "TreeModel")
    </div>
</header>
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - Проводник</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
